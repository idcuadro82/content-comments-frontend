{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "esnext",
		"outDir": "./dist/",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react",
		"baseUrl": "./src",
		"lib": [
			"es2015",
			"dom.iterable",
			"es2016.array.include",
			"es2017.object",
			"dom"
		],
		"typeRoots": [
      "node_modules/@types"
    ],
		"module": "es6",
		"removeComments": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"paths": {
			"@components/*": ["/components/*"],
			"@css/*": ["/css/*"]
    }
  }
}
